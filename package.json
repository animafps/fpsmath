{
  "name": "fpsmath",
  "version": "1.9.0",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint --format github .",
    "start": "node index.js",
    "lint:fix": "eslint --fix .",
    "commit": "lint-staged && cz",
    "prettier": "prettier --write .",
    "cz": "cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AnimaFPS/FPSMath.git"
  },
  "keywords": [],
  "author": "AnimaFPS",
  "license": "MIT",
  "description": "A Discord bot designed to convert sensitivities, fovs, mouse feel across themselves and preset games",
  "dependencies": {
    "better-sqlite3": "^7.1.2",
    "common-tags": "^1.8.0",
    "discord.js": "^12.5.1",
    "discord.js-commando": "github:discordjs/Commando",
    "dotenv": "^8.2.0",
    "mathjs": "^9.0.0",
    "winston": "^3.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-formatter-github": "^1.0.11",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1",
    "semantic-release": "^17.3.7"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "es5",
    "endOfLine": "lf",
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,jsx,md,yaml,json}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
